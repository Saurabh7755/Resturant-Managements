@model Restaurant.Web.Models.Order

@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<br />
<br />
<br />
<style>
    body {
        background-image: url(/lib/images/backimg01.jpg);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100% 100%;
    }
</style>


<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h4 style="color:violet">
                    <label asp-for="CustomerID" class="control-label"></label></h4>
                <select asp-for="CustomerID" class ="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>
            <div class="form-group">
                <h4 style="color:violet">
                    <label asp-for="OrderDateTime" class="control-label"></label></h4>
                <input asp-for="OrderDateTime" class="form-control" />
                <span asp-validation-for="OrderDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" button type="button" class="btn btn-primary">Back to List</a>
</div>

<br />
<br />
<br />
<br />

<h4 style="color:black">
    IF YOU ARE NEW USER!!!! Please Resgister First!!</h4>
<div>
    <a class="item"
       asp-area="Manage" asp-controller="Customers" asp-action="Create" button type="button" class="btn btn-success">
            <b>REGISTER NOW</b>
    </a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
